<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .inputRow {
            margin: 10px 0px;
        }

        .labelIconCell {
            width: 30px;
        }

        .labelCell {
            width: 30px;
        }

        .inputCell {
            width: 200px;
        }

        .errorLabel {
            color: red;
            font-weight: bold;
        }
    </ui:style>

    <g:FormPanel>
        <g:VerticalPanel>
            <g:Label ui:field="errorLabel" visible="false"></g:Label>

            <g:Grid>
                <g:row addStyleNames="{style.inputRow}">
                    <g:customCell addStyleNames="{style.labelIconCell}">
                        <g:Image url="/images/user.png" altText="User Icon"/>
                    </g:customCell>
                    <g:customCell addStyleNames="{style.labelCell}">
                        <g:Label>Username: </g:Label>
                    </g:customCell>
                    <g:customCell addStyleNames="{style.inputCell}">
                        <g:TextBox maxLength="30" ui:field="usernameTextBox"/>
                    </g:customCell>
                </g:row>
                <g:row addStyleNames="{style.inputRow}">
                    <g:customCell addStyleNames="{style.labelIconCell}">
                        <g:Image url="/images/password.png" altText="Password Icon"/>
                    </g:customCell>
                    <g:customCell addStyleNames="{style.labelCell}">
                        <g:Label>Password: </g:Label>
                    </g:customCell>
                    <g:customCell addStyleNames="{style.inputCell}">
                        <g:PasswordTextBox maxLength="30" ui:field="passwordTextBox"/>
                    </g:customCell>
                </g:row>
                <g:row addStyleNames="{style.inputRow}">
                    <g:customCell addStyleNames="{style.labelIconCell}">
                        <g:Image url="/images/password.png" altText="Password Icon"/>
                    </g:customCell>
                    <g:customCell addStyleNames="{style.labelCell}">
                        <g:Label>Confirm Password: </g:Label>
                    </g:customCell>
                    <g:customCell addStyleNames="{style.inputCell}">
                        <g:PasswordTextBox maxLength="30" ui:field="confirmTextBox"/>
                    </g:customCell>
                </g:row>
            </g:Grid>

            <g:Button ui:field="nextButton" visible="false">Next</g:Button>
        </g:VerticalPanel>
    </g:FormPanel>
</ui:UiBinder>