<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .title {
            font-size: 15pt;
            margin-top: 20px;
        }

        .icon {
            margin-right: 25px;
        }

        .description {

        }
    </ui:style>
    <g:FocusPanel ui:field="action" width="100%">
        <g:HorizontalPanel width="100%">
            <g:cell width="80px" horizontalAlignment="ALIGN_LEFT">
                <g:Image width="120px" height="84px" addStyleNames="{style.icon}" ui:field="icon"/>
            </g:cell>
            <g:cell horizontalAlignment="ALIGN_LEFT">
                <g:FlowPanel>
                    <g:Label ui:field="title" addStyleNames="{style.title}"></g:Label>
                    <g:Label ui:field="description" addStyleNames="{style.description}"></g:Label>
                </g:FlowPanel>
            </g:cell>
        </g:HorizontalPanel>
    </g:FocusPanel>
</ui:UiBinder>
