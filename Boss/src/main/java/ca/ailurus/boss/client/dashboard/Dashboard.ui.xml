<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .outerPanel {
        width: 750px;
        }

        .innerPanel {
        padding: 10px;
        background-color: #FFECDA;
        border-radius: 20px;
        }
    </ui:style>

    <g:VerticalPanel horizontalAlignment="ALIGN_CENTER" addStyleNames="expand">
        <g:FlowPanel addStyleNames="{style.outerPanel}">
            <g:HorizontalPanel width="100%">
                <g:cell horizontalAlignment="ALIGN_LEFT">
                    <g:HorizontalPanel verticalAlignment="ALIGN_BOTTOM">
                        <g:Image ui:field="icon"/>
                        <g:Label ui:field="titleLabel"/>
                    </g:HorizontalPanel>
                </g:cell>
                <g:cell horizontalAlignment="ALIGN_RIGHT">
                    <g:HorizontalPanel verticalAlignment="ALIGN_BOTTOM">
                        <g:Button ui:field="logoutButton">Logout</g:Button>
                    </g:HorizontalPanel>
                </g:cell>
            </g:HorizontalPanel>
            <g:FlowPanel ui:field="panel" addStyleNames="{style.innerPanel}">
            </g:FlowPanel>
        </g:FlowPanel>
    </g:VerticalPanel>
</ui:UiBinder>