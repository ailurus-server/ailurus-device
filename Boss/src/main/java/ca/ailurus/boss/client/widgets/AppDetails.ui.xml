<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .errorLabel {
        color: red;
        font-weight: bold;
        }

        .title {
        }

        .description {
        }

        .settings {
        }
    </ui:style>

    <g:VerticalPanel width="100%" horizontalAlignment="ALIGN_LEFT">
        <g:Label ui:field="title" addStyleNames="{style.title}"/>
        <g:Label ui:field="description" addStyleNames="{style.description}"/>
        <g:Label addStyleNames="{style.settings}">Settings</g:Label>
        <g:FormPanel>
            <g:VerticalPanel width="100%" horizontalAlignment="ALIGN_CENTER">
                <g:Label ui:field="errorLabel" visible="false"/>

                <g:FlexTable ui:field="settingsTable">
                </g:FlexTable>
                <g:HorizontalPanel width="100%">
                    <g:cell horizontalAlignment="ALIGN_LEFT">
                        <g:Button ui:field="cancelButton">Cancel</g:Button>
                    </g:cell>
                    <g:cell horizontalAlignment="ALIGN_RIGHT">
                        <g:Button ui:field="updateButton">Update</g:Button>
                    </g:cell>
                </g:HorizontalPanel>
            </g:VerticalPanel>
        </g:FormPanel>
    </g:VerticalPanel>
</ui:UiBinder>