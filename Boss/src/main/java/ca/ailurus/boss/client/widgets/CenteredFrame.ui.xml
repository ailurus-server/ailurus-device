<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .outerPanel {
        width: 750px;
        }

        .innerPanel {
        padding: 10px;
        background-color: #FFECDA;
        border-radius: 20px;
        }
    </ui:style>

    <g:VerticalPanel ui:field="basePanel" verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_CENTER"
                     addStyleNames="expand">
        <g:FlowPanel addStyleNames="{style.outerPanel}">
            <g:HorizontalPanel width="100%">
                <g:HorizontalPanel verticalAlignment="ALIGN_BOTTOM">
                    <g:Image ui:field="icon"/>
                    <g:Label ui:field="titleLabel"></g:Label>
                </g:HorizontalPanel>
            </g:HorizontalPanel>
            <g:FlowPanel ui:field="panel" addStyleNames="{style.innerPanel}">
            </g:FlowPanel>
        </g:FlowPanel>
    </g:VerticalPanel>
</ui:UiBinder>