<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .prompt {
            font-size: 1.5em;
            font-weight: bold;
        }
        .icon {
            width: 100px;
        }
    </ui:style>
    <g:FocusPanel ui:field="panel">
        <g:HorizontalPanel width="100%" verticalAlignment="ALIGN_MIDDLE">
            <g:cell width="80px">
                <g:Image url="images/apps/add.png"/>
            </g:cell>
            <g:cell >
                <g:Label addStyleNames="{style.prompt}">Install a new application</g:Label>
            </g:cell>
        </g:HorizontalPanel>
    </g:FocusPanel>
</ui:UiBinder>