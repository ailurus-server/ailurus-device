<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .prompt {
            font-size: 15pt;
        }
        .icon {
            margin-right: 25px;
        }
    </ui:style>
    <g:FocusPanel ui:field="panel">
        <g:HorizontalPanel width="100%" verticalAlignment="ALIGN_MIDDLE">
            <g:cell width="120px">
                <g:Image addStyleNames="{style.icon}" url="./images/apps/add.png"/>
            </g:cell>
            <g:cell>
                <g:Label addStyleNames="{style.prompt}">Install a new application</g:Label>
            </g:cell>
        </g:HorizontalPanel>
    </g:FocusPanel>
</ui:UiBinder>