<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        * {
        color: rgb(254, 153, 65);
        }

        .vpanel {
        width: 60%;
        margin: auto;
        }

        table {
        table-layout: fixed;
        }

        .frame {

        }

        .inputRow {
        }

        .labelIconCell {
        }

        .labelCell {
        }

        .inputCell {
        }

        .errorLabel {
        color: red;
        font-weight: bold;
        }

        .setup {
        height: 100px;
        margin-left: 35px;
        }

        .titleLabel {
        font-size: 28px;
        padding-top: 22px;
        color: white;
        }

        .logoCell {
        margin-top: 35px;
        width: 50px;
        height: 50px;
        display: inline;
        float: left;
        margin-right: 23px;
        }

        .titleCell {
        margin-left: 35px;
        margin-top: 35px;
        display: inline;
        }

        .subtitleCell {
        font-size: 32px;
        margin-left: 35px;
        color: rgb(254, 153, 65);
        }

        .subtitleLabel {

        }

        .credentials {
        margin: auto;
        margin-top: 80px;
        padding-top: 85px;
        }

        .login {
        background-color: white;
        opacity: 0.79;
        height: 300px;
        border-radius: 25px;
        width: 90%;
        margin: auto;
        }

        .credentials tr {
        height: 60px;
        }

        input {
        width: 160px;
        margin-bottom: 4px;
        }

        .frame .gwt-TextBox, .frame .gwt-PasswordTextBox, .frame input {
        font-size: 13pt;
        }

        .expandWidth {}

        .nextBtn {
        width: 50px;
        height: 50px;
        margin: auto;
        }

        .nextBtn img {
        margin-top: 80px;
        bottom: 90px;
        }
    </ui:style>

    <g:FormPanel>
        <g:VerticalPanel addStyleNames="{style.vpanel}">
            <g:Label ui:field="errorLabel" visible="false" addStyleNames="{style.errorLabel}"></g:Label>
            <g:FlowPanel addStyleNames="{style.frame}">
                <g:FlowPanel addStyleNames="{style.setup}">
                    <g:FlowPanel addStyleNames="{style.logoCell}">
                        <g:Image url="images/placeholder-orange.png" altText="Logo" pixelSize="50, 50"/>
                    </g:FlowPanel>
                    <g:FlowPanel addStyleNames="{style.titleCell}">
                        <g:Label addStyleNames="{style.titleLabel}">Login</g:Label>
                    </g:FlowPanel>
                </g:FlowPanel>
                <g:FlowPanel addStyleNames="{style.login}">
                    <g:Grid ui:field="credentialsGrid" addStyleNames="{style.credentials}">
                        <g:row addStyleNames="{style.inputRow}">
                            <g:customCell addStyleNames="{style.labelIconCell}" width="34">
                                <g:Image url="images/user.png" altText="User Icon"/>
                            </g:customCell>
                            <g:customCell addStyleNames="{style.labelCell}">
                                <g:Label>Username</g:Label>
                            </g:customCell>
                            <g:customCell addStyleNames="{style.inputCell}">
                                <g:TextBox maxLength="30" ui:field="usernameTextBox"/>
                            </g:customCell>
                        </g:row>
                        <g:row addStyleNames="{style.inputRow}">
                            <g:customCell addStyleNames="{style.labelIconCell}">
                                <g:Image url="images/password.png" altText="Password Icon"/>
                            </g:customCell>
                            <g:customCell addStyleNames="{style.labelCell}">
                                <g:Label>Password</g:Label>
                            </g:customCell>
                            <g:customCell addStyleNames="{style.inputCell}">
                                <g:PasswordTextBox maxLength="30" ui:field="passwordTextBox"/>
                            </g:customCell>
                        </g:row>
                    </g:Grid>
                </g:FlowPanel>
            </g:FlowPanel>

            <g:FlowPanel addStyleNames="{style.nextBtn}">
                <g:Image ui:field="submit" url="/images/navDown.png" altText="Nav Down" pixelSize="50, 50"/>
            </g:FlowPanel>
            <!--g:HorizontalPanel horizontalAlignment="ALIGN_CENTER" addStyleNames="{style.expandWidth}">
                <g:Button ui:field="submit">Login</g:Button>
            </g:HorizontalPanel-->
        </g:VerticalPanel>
    </g:FormPanel>
</ui:UiBinder>
